<h1>TV Discovery App</h1>
<h4>Popular Shows</h1>
<ol>
<%  @popular_shows.each do |show| %>
  <li><%= show.name %></li>
<% end %>
</ol>

<%= form_tag(shows_path, :method => "get", class: "form") do %>
  <div class='form-group' aria-hidden='true'>
    <%= search_field_tag :name, params[:name], placeholder: 'Search TV shows', class: 'form-control'%>
  </div>
  <div class='form-group' aria-hidden='true'>
    <%= submit_tag 'Search', class: 'btn btn-success' %>
  </div>
<% end %>

<%= @popular_shows.each {|show| "NAME = #{show.name}" } %>